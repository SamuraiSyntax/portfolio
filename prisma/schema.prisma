generator client {
  provider        = "prisma-client-js"
  output          = "./generated/client"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Contact {
  id                     String        @id @default(uuid())
  createdAt              DateTime      @default(now())
  updatedAt              DateTime      @updatedAt
  name                   String
  email                  String
  message                String
  phone                  String?
  company                String?
  clientType             String?
  projectType            String?
  budget                 Float?
  deadline               DateTime?
  existingSite           String?
  status                 ContactStatus @default(NEW)
  annualRevenue          Float?
  assignedTo             String?
  attachments            String[]
  companySize            String?
  competitors            String[]
  contractValue          Float?
  industry               String?
  ipAddress              String?
  lastContact            DateTime?
  locale                 String?
  marketingSource        String?
  newsletter             Boolean       @default(false)
  nextFollowUp           DateTime?
  notes                  String?
  objectives             String[]
  position               String?
  preferredContactMethod String?
  priority               Priority      @default(NORMAL)
  projectScope           String?
  quotationAmount        Float?
  tags                   String[]
  targetAudience         String?
  timezone               String?
  userAgent              String?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

enum ContactStatus {
  NEW
  IN_PROGRESS
  COMPLETED
  ARCHIVED
}

enum Priority {
  LOW
  NORMAL
  HIGH
  URGENT
}
